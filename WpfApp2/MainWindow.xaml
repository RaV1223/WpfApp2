<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <ControlTemplate x:Key="EnemyTemplate" TargetType="{x:Type ContentControl}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="17*"/>
                    <ColumnDefinition Width="8*"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </ControlTemplate>
    </Window.Resources>
    <Grid HorizontalAlignment="Center" Height="434" VerticalAlignment="Center" Width="800">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FF2880AD" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button Content="Start" x:Name="Start" FontSize="25px" Margin="1,368,0,22" Height="44" Width="94" HorizontalAlignment="Left" Background="#FF3133CC"/>
        <StackPanel HorizontalAlignment="Left" Orientation="Vertical" VerticalAlignment="Top" Margin="714,366,0,0" Background="#FF234B79">
            <TextBlock TextWrapping="Wrap" Text="Ich unikaj" FontSize="18"/>
            <ContentControl Template="{DynamicResource EnemyTemplate}" Content="ContentControl"/>
            <Ellipse Stroke="Black" Fill="#FFFF0303" Height="100" Width="100"/>
        </StackPanel>
        <ProgressBar Height="20" Width="600px" Margin="0,380,0,34" Background="#FF252677"/>

        <StackPanel x:Name="human" Orientation="Vertical">
            <Ellipse Fill="White" Height="15" Width="10"/>
            <Rectangle Fill="White" Height="30" Width="10"/>
        </StackPanel>
        <Canvas>
            <TextBlock x:Name="gameOverText" Canvas.Left="332" TextWrapping="Wrap" Text="TextBlock" Canvas.Top="217" FontFamily="" FontSize="50"/>
        </Canvas>
    </Grid>
</Window>
